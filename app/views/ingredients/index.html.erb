<%= render 'shared/page_title', title: "Available Ingredients" %>

<div align="center">
  <%= will_paginate %>
  <% @ingredients.each do |ing| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 mx-auto bg-light py-3">
        <%= link_to ing.name.capitalize, ingredient_path(ing), class: "lead font-weight-bold" %>
        <small><%= pluralize(ing.recipes.count, "recipe") if ing.recipes %></small>
            <% if logged_in? && current_chef.admin? %>
                <%= link_to "Edit this ingredient", edit_ingredient_path(ing) %>
            <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>

